<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorGray">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Categories"
        android:id="@+id/fragment_categories_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_arrow_back_white_24dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:visibility="gone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Italian"
        android:id="@+id/fragment_categories_current"
        android:layout_alignBottom="@+id/fragment_categories_back"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/fragment_categories_back"
        android:enabled="false"
        android:textColor="@android:color/black"
        android:visibility="gone"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_categories_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fragment_categories_back"
        android:paddingBottom="25dp"
        >


    </android.support.v7.widget.RecyclerView>


</RelativeLayout>